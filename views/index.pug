extends ./base/layout

block append head
    title Varun Verma
    meta(property="og:title" content="Varun Verma")
    meta(name="twitter:title" content="Varun Verma")
    meta(name="title" content="Varun Verma")

    meta(name="description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")
    meta(name="og:description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")
    meta(name="twitter:description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")

    meta(property="og:image" content="http://varunest.com/img/profile.jpg")
    meta(name="twitter:image" content="http://varunest.com/img/profile.jpg")

    meta(name="twitter:url" content="http://varunest.com")
    meta(name="og:url" content="http://varunest.com")

    meta(name="twitter:card" content="photo")
    meta(name="twitter:site" content="@varunest")

    meta(name="robots" content="index,follow")

    link(rel='stylesheet' href='https://unpkg.com/botui/build/botui.min.css')


block prepend body
    div(class='container-fluid bg-primary-1' style='min-height:100vh')
        div(class='botui-app-container' id='hello-world')
            bot-ui

block append script
    script(src='https://cdn.jsdelivr.net/vue/latest/vue.min.js')
    script(src='https://unpkg.com/botui/build/botui.min.js')

    script.
        var botui = new BotUI('hello-world');

        botui.message.add({
            content: 'Hello World from bot!'
        }).then(function () { // wait till previous message has been shown.

            botui.message.add({
                delay: 1000,
                human: true,
                content: 'Hello World from human!'
            });
        });
