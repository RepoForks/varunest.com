extends ./base/layout

block append head
    title Varun Verma
    meta(property="og:title" content="Varun Verma")
    meta(name="twitter:title" content="Varun Verma")
    meta(name="title" content="Varun Verma")

    meta(name="description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")
    meta(name="og:description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")
    meta(name="twitter:description" content="Varun Verma is a full stack developer and product designer based in Chandigarh.")

    meta(property="og:image" content="http://varunest.com/img/profile.jpg")
    meta(name="twitter:image" content="http://varunest.com/img/profile.jpg")

    meta(name="twitter:url" content="http://varunest.com")
    meta(name="og:url" content="http://varunest.com")

    meta(name="twitter:card" content="photo")
    meta(name="twitter:site" content="@varunest")

    meta(name="robots" content="index,follow")

    link(rel='stylesheet' href='https://unpkg.com/botui/build/botui.min.css')


block prepend body
    div(id='page-home' class='container-fluid bg-primary-1')
        div(class='container header')
            div(class='row')
                div(class='col-lg-4')
                    div(class='avatar-wrapper text-center')
                        a(href="/")
                            img(class='avatar' src='/img/profile.jpg')
                    h1(class='text-color-primary text-center intro-title') I'm <a href='/' class='name'>Varun</a>, I code and create things
                div(class='col-lg-8')
                    div(class='botui-app-container' id='chat-box')
                        bot-ui

block append script
    script(src='https://cdn.jsdelivr.net/vue/latest/vue.min.js')
    script(src='https://unpkg.com/botui/build/botui.min.js')

    script.
        var botui = new BotUI('chat-box');

        function describeInDetail() {
            return botui.message.add({
                loading: true,
                delay: 1000,
                content: "Cool !! 😎"
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 2000,
                    content: "I've always been interested in design and development. I believe for most of the products, both go hand in hand."
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 3000,
                    content: "Because of this enthusiasm towards tech & UX I have come across wide variety of technologies and projects, which I try to update here on this website."
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 5000,
                    content: "Crap 😱"
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 3000,
                    content: "Servers on fire🔥🔥🔥"
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 500,
                    content: "GTG!!"
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 3000,
                    content: "Meanwhile, feel free to explore the website."
                })
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 1000,
                    content: "byee 👋"
                })
            });
        }

        function wrapUpShort() {
            return botui.message.add({
                loading: true,
                delay: 1000,
                content: "<br>😔 Okay!!<br>"
            }).then(function () {
                return botui.message.add({
                    loading: true,
                    delay: 2000,
                    content: "![](https://media.giphy.com/media/NTY1kHmcLsCsg/giphy.gif) It seems you are in a hurry! <br>Feel free to explore website or drop me a mail at [mailvarunest@gmail.com](mailto:mailvarunest@gmail.com)"
                });
            })
        }

        botui.message.add({
            delay: 1000,
            content: 'Hi there!'
        }).then(function () { // wait till previous message has been shown.
            return botui.message.add({
                delay: 2000,
                loading: true,
                content: 'My name is Varun and most of my time is spent designing and developing stuff. Do you wish to know more about me?'
            });
        }).then(function () {
            return botui.action.button({
                human: true,
                delay: 1000,
                action: [
                    {
                        text: 'Yes 👍',
                        value: 1
                    },
                    {
                        text: "Shut up already! 😷",
                        value: 2
                    }
                ]
            })
        }).then(function (res) {
            if (res.value === 1) {
                return describeInDetail();
            } else {
                return wrapUpShort();
            }
        });
